{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "moduleResolution": "node",
    "target": "es2015",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": ".",
    "esModuleInterop": true,
    "skipLibCheck": true,
  },
  "include": ["src/**/*.ts"],
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Recommended with some changes",
  "exclude": [
    "node_modules",
    "playwright/playwright.config.ts",
  ]
}