{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "allowJs": true,
    "moduleResolution": "node",
    "target": "ES2017",
    "module": "ES2022",
    "outDir": "dist",
    "rootDir": ".",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "tests/**/*.ts"],
  "display": "Recommended with some changes",
  "exclude": [
    "node_modules"
  ]
}