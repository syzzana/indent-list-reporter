{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "lib": [
      "ES2022"
    ],
    "module": "ES2022",
    "moduleResolution": "node",
    "target": "ES2022",
    "outDir": "dist",
    "rootDir": ".",
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "color-text/**/*"
  ],
  "exclude": [
    "node_modules",
    "playwright/playwright.config.ts",
  ]
}
